@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>

    body {
        background: linear-gradient(135deg, #1e3c72, #2a5298);
        height: 100vh;
    }


    .card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: scale(1.02);
        }


    .card-header {
        background: #0d6efd;
        color: white;
        font-weight: bold;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }


    .btn-primary {
        background: #0d6efd;
        border: none;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background: #0b5ed7;
        }
</style>
</head>


<body class="bg-light d-flex justify-content-center align-items-center vh-100">

    <div class="card shadow border-0" style="width: 400px;">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0"><i class="bi bi-box-arrow-in-right"></i> Đăng nhập</h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label fw-semibold">Tên đăng nhập</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                        <input type="text" name="username" class="form-control" placeholder="Nhập tên đăng nhập" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label fw-semibold">Mật khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" name="password" class="form-control" placeholder="Nhập mật khẩu" required />
                    </div>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }

                <button type="submit" class="btn btn-primary w-100 fw-bold">
                    <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                </button>

                <p class="mt-3 text-center">
                    Chưa có tài khoản?
                    <a asp-action="Register" class="fw-bold text-decoration-none">Đăng ký ngay</a>
                </p>
                <p class="mt-3 text-center">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="fw-bold text-decoration-none">Quay lại</a>
                </p>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

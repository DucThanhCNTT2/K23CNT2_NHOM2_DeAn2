@model List<Hethonglaptop_prj2.Models.CartItem>

@{
    ViewData["Title"] = "Giỏ hàng";
    var tongTien = Model.Sum(sp => sp.Gia * sp.SoLuong);
    Layout = null; // Không dùng layout ngoài
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - NHTStore</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        /* Thanh tìm kiếm hiện đại (giống Home) */
        .search-bar {
            display: flex;
            align-items: center;
            background: white;
            border-radius: 50px;
            padding: 5px 10px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.2);
            width: 45px;
            transition: width 0.5s ease, box-shadow 0.3s ease;
            overflow: hidden;
        }

            .search-bar input {
                flex: 1;
                border: none;
                outline: none;
                background: transparent;
                padding: 8px 12px;
                font-size: 15px;
                opacity: 0;
                width: 0;
                transition: all 0.5s ease;
            }

            .search-bar button {
                border: none;
                background: #dc3545;
                color: white;
                border-radius: 50%;
                width: 36px;
                height: 36px;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: 0.3s;
            }

                .search-bar button:hover {
                    background: #b02a37;
                    transform: scale(1.1);
                }

            .search-bar:hover,
            .search-bar:focus-within {
                width: 320px;
                box-shadow: 0 4px 10px rgba(0,0,0,0.3);
            }

                .search-bar:hover input,
                .search-bar:focus-within input {
                    opacity: 1;
                    width: 100%;
                }
    </style>

</head>
<body>

    <!-- HEADER -->
    <div class="header d-flex justify-content-between align-items-center px-4 py-2 shadow-sm" style="background-color: #b30000; color: white;">
        <!-- Logo -->
        <div class="d-flex align-items-center">
            <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-white text-decoration-none">
                <img src="/images/NHTStore.jpg" alt="Logo" style="height:45px; border-radius:6px; margin-right:10px;">
                <span class="fw-bold fs-4">NHTStore</span>
            </a>
        </div>

        <!-- Ô tìm kiếm hiện đại -->
        <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Tìm kiếm sản phẩm..." />
            <button id="searchBtn"><i class="fa-solid fa-magnifying-glass"></i></button>
        </div>

        <!-- Thông tin & Tài khoản -->
        <div class="d-flex align-items-center flex-wrap justify-content-end">
            <div class="me-4"><i class="fas fa-phone"></i> <b>0888.090.888</b></div>
            <div class="me-4"><i class="fas fa-map-marker-alt"></i> Cửa hàng gần bạn</div>
            <div class="me-4"><i class="fas fa-truck"></i> Tra cứu đơn hàng</div>

            @if (Context.Session.GetString("UserName") != null)
            {
                <span class="me-3">Xin chào, <b>@Context.Session.GetString("UserName")</b></span>

                @if (Context.Session.GetString("Role") == "Admin")
                {
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-warning btn-sm me-2">
                        <i class="fa-solid fa-gear"></i> Quản trị
                    </a>
                }

                <a asp-controller="Accounts" asp-action="Logout" title="Đăng xuất" class="text-white">
                    <i class="fa-solid fa-right-from-bracket fs-5"></i>
                </a>
            }
            else
            {
                <a asp-controller="Accounts" asp-action="Login" title="Đăng nhập" class="text-white me-3">
                    <i class="fa-solid fa-user fs-5"></i>
                </a>
            }

            <a asp-controller="Carts" asp-action="Index" class="text-white text-decoration-none position-relative">
                <i class="bi bi-cart4 fs-5"></i>
            </a>
        </div>
    </div>


    <!-- Giỏ hàng -->
    <div class="container mt-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0"><i class="bi bi-cart4"></i> Giỏ hàng của bạn</h3>
            </div>

            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-cart-x fs-1"></i>
                        <h5 class="mt-3">Giỏ hàng trống!</h5>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-warning mt-3">
                            ← Quay lại Trang chủ
                        </a>
                    </div>
                }
                else
                {
                    <table class="table table-hover align-middle text-center">
                        <thead class="table-light">
                            <tr>
                                <th>Ảnh</th>
                                <th>Tên sản phẩm</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="~/@item.Anh" alt="@item.TenSP" /></td>
                                    <td>@item.TenSP</td>
                                    <td>@string.Format("{0:N0} đ", item.Gia)</td>
                                    <td>@item.SoLuong</td>
                                    <td class="fw-bold text-danger">@string.Format("{0:N0} đ", item.Gia * item.SoLuong)</td>
                                    <td>
                                        <a asp-action="Remove" asp-route-id="@item.MaSP" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-warning fw-bold">
                            ← Tiếp tục mua hàng
                        </a>

                        <div class="total-box">
                            <h4 class="mb-0 text-danger fw-bold">
                                Tổng cộng: @string.Format("{0:N0} đ", tongTien)
                            </h4>
                        </div>

                        <a asp-controller="Carts" asp-action="Success" class="btn btn-success float-end">
                            <i class="fa-solid fa-credit-card"></i> Thanh toán
                        </a>

                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        © 2025 NHTStore. Mọi quyền được bảo lưu.
    </div>

    <!-- Bootstrap Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

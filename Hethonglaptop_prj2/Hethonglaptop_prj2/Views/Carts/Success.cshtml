@{
    Layout = null;
    ViewData["Title"] = "Đặt hàng thành công";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - NHTStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
</head>
<body style="background-color:#f8f9fa;">

    <div class="container text-center mt-5">
        <div class="card shadow-lg p-5 border-0 rounded-4">
            <i class="fa-solid fa-circle-check text-success display-1 mb-4"></i>
            <h2 class="fw-bold text-success">ĐẶT HÀNG THÀNH CÔNG!</h2>
            <p class="fs-5 mt-3 text-secondary">@ViewBag.Message</p>

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-danger px-4">
                    <i class="fa-solid fa-house"></i> Quay lại Trang chủ
                </a>
                <a asp-controller="Carts" asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="fa-solid fa-cart-shopping"></i> Xem giỏ hàng
                </a>
            </div>
        </div>
    </div>

</body>
</html>

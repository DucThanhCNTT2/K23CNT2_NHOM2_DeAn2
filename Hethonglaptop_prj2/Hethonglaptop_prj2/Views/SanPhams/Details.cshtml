@model Hethonglaptop_prj2.Models.SanPham
@{
    Layout = null;
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
</head>

<body class="bg-light d-flex justify-content-center align-items-center vh-100">

    <div class="card shadow-lg border-0" style="width: 800px;">
        <div class="card-header bg-info text-white text-center">
            <h3 class="mb-0"><i class="bi bi-info-circle-fill"></i> Thông tin chi tiết sản phẩm</h3>
        </div>

        <div class="card-body p-4">
            <div class="row align-items-center">
                <!-- Hình ảnh sản phẩm -->
                <div class="col-md-4 text-center mb-3">
                    <img src="~/@Model.Anh" alt="@Model.TenSp"
                         class="img-fluid rounded shadow-sm border"
                         style="max-height: 250px; object-fit: contain;" />
                </div>

                <!-- Thông tin chi tiết -->
                <div class="col-md-8">
                    <table class="table table-borderless">
                        <tr>
                            <th class="text-secondary" style="width: 30%;">Mã sản phẩm</th>
                            <td>@Html.DisplayFor(model => model.MaSp)</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Tên sản phẩm</th>
                            <td class="fw-bold">@Html.DisplayFor(model => model.TenSp)</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Giá</th>
                            <td class="fw-bold text-danger">@String.Format("{0:N0} VNĐ", Model.Gia)</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Số lượng</th>
                            <td>@Html.DisplayFor(model => model.SoLuong)</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Thương hiệu</th>
                            <td>@Html.DisplayFor(model => model.MaThNavigation.TenTh)</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Mô tả</th>
                            <td>@Html.DisplayFor(model => model.MoTa)</td>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Nút điều hướng -->
            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.MaSp" class="btn btn-warning px-4">
                    <i class="bi bi-pencil-square"></i> Sửa
                </a>
                <a class="btn btn-secondary px-4 ms-2" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

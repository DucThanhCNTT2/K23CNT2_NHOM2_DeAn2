@model Hethonglaptop_prj2.Models.HoaDon
@{
    Layout = null;
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">

    <div class="card shadow-lg border-0" style="width: 550px;">
        <div class="card-header bg-info text-white text-center">
            <h3 class="mb-0"><i class="bi bi-receipt"></i> Thông tin chi tiết hóa đơn</h3>
        </div>

        <div class="card-body p-4">
            <table class="table table-borderless mb-4">
                <tr>
                    <th class="text-secondary" style="width: 30%;">Mã hóa đơn</th>
                    <td>@Html.DisplayFor(model => model.MaHd)</td>
                </tr>
                <tr>
                    <th class="text-secondary">Ngày lập</th>
                    <td>@Html.DisplayFor(model => model.NgayLap)</td>
                </tr>
                <tr>
                    <th class="text-secondary">Tổng tiền</th>
                    <td class="fw-bold text-danger">@String.Format("{0:N0} VNĐ", Model.TongTien)</td>
                </tr>
                <tr>
                    <th class="text-secondary">Khách hàng</th>
                    <td>
                        @Html.DisplayFor(model => model.MaKhNavigation.HoTen)
                        (<small>@Html.DisplayFor(model => model.MaKhNavigation.MaKh)</small>)
                    </td>
                </tr>
                <tr>
                    <th class="text-secondary">Nhân viên lập</th>
                    <td>
                        @Html.DisplayFor(model => model.MaNvNavigation.HoTen)
                        (<small>@Html.DisplayFor(model => model.MaNvNavigation.MaNv)</small>)
                    </td>
                </tr>
            </table>

            <div class="text-center mt-3">
                <a asp-action="Edit" asp-route-id="@Model?.MaHd" class="btn btn-warning px-4">
                    <i class="bi bi-pencil-square"></i> Sửa
                </a>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary px-4 ms-2">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

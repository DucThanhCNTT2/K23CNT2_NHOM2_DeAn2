@model Hethonglaptop_prj2.Models.HoaDon
@{
    Layout = null;
    ViewData["Title"] = "Xóa hóa đơn";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">

    <div class="card shadow-lg border-0" style="width: 550px;">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Xác nhận xóa hóa đơn</h3>
        </div>

        <div class="card-body">
            <p class="text-center text-muted mb-4">
                Bạn có chắc chắn muốn xóa hóa đơn này không? <br />
                <b class="text-danger">Hành động này không thể hoàn tác!</b>
            </p>

            <table class="table table-bordered">
                <tr>
                    <th style="width:30%;">Ngày lập</th>
                    <td>@Html.DisplayFor(model => model.NgayLap)</td>
                </tr>
                <tr>
                    <th>Tổng tiền</th>
                    <td class="fw-bold text-danger">@String.Format("{0:N0} VNĐ", Model.TongTien)</td>
                </tr>
                <tr>
                    <th>Khách hàng</th>
                    <td>
                        @Html.DisplayFor(model => model.MaKhNavigation.HoTen)
                        (<small>@Html.DisplayFor(model => model.MaKhNavigation.MaKh)</small>)
                    </td>
                </tr>
                <tr>
                    <th>Nhân viên lập</th>
                    <td>
                        @Html.DisplayFor(model => model.MaNvNavigation.HoTen)
                        (<small>@Html.DisplayFor(model => model.MaNvNavigation.MaNv)</small>)
                    </td>
                </tr>
            </table>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="MaHd" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Xóa
                </button>
                <a class="btn btn-secondary px-4 ms-2" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

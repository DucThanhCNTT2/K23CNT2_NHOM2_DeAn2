@model IEnumerable<Hethonglaptop_prj2.Models.KhachHang>

<div class="mb-3">
    <a class="btn btn-success" asp-area="" asp-controller="KhachHangs" asp-action="Create">
        <i class="fas fa-plus"></i> Thêm khách hàng
    </a>
</div>
<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Mã KH</th>
            <th>Tên KH</th>
            <th>Email</th>
            <th>SĐT</th>
            <th>Địa chỉ</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kh in Model)
        {
            <tr>
                <td>@kh.MaKh</td>
                <td>@kh.HoTen</td>
                <td>@kh.Email</td>
                <td>@kh.Sdt</td>
                <td>@kh.DiaChi</td>
                <td style="width:160px;" class="text-center align-middle">
                    <div class="d-flex justify-content-center gap-2">
                        <a class="btn btn-primary" asp-area="" asp-controller="KhachHangs" asp-action="Details" asp-route-id="@kh.MaKh">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a class="btn btn-warning" asp-area="" asp-controller="KhachHangs" asp-action="Edit" asp-route-id="@kh.MaKh">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="btn btn-danger" asp-area="" asp-controller="KhachHangs" asp-action="Delete" asp-route-id="@kh.MaKh">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

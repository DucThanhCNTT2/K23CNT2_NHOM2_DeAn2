@model IEnumerable<Hethonglaptop_prj2.Models.SanPham>

<div class="mb-3">
    <a class="btn btn-success" asp-area="" asp-controller="SanPhams" asp-action="Create">
        <i class="fas fa-plus"></i> Thêm sản phẩm
    </a>
</div>
<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Mã sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Tồn kho</th>
            <th>Ảnh</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sp in Model)
        {
            <tr>
                <td>@sp.MaSp</td>
                <td>@sp.TenSp</td>
                <td>@String.Format("{0:N0} VND", sp.Gia)</td>
                <td>@sp.SoLuong</td>
                <td>
                    <img src="@sp.Anh" alt="@sp.TenSp" style="width:80px;height:auto;" />
                </td>
                <td style="width:160px;" class="text-center align-middle">
                    <div class="d-flex justify-content-center gap-2">
                        <a class="btn btn-primary" asp-area="" asp-controller="SanPhams" asp-action="Details" asp-route-id="@sp.MaSp">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a class="btn btn-warning" asp-area="" asp-controller="SanPhams" asp-action="Edit" asp-route-id="@sp.MaSp">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="btn btn-danger" asp-area="" asp-controller="SanPhams" asp-action="Delete" asp-route-id="@sp.MaSp">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
    
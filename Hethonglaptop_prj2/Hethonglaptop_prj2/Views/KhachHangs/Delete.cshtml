@model Hethonglaptop_prj2.Models.KhachHang
@{
    Layout = null;
    ViewData["Title"] = "Xóa khách hàng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">

    <div class="card shadow-lg border-0" style="width: 500px;">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Xác nhận xóa khách hàng</h3>
        </div>

        <div class="card-body p-4">
            <p class="text-center text-muted mb-4">
                Bạn có chắc chắn muốn xóa khách hàng này không? <br />
                <b class="text-danger">Hành động này không thể hoàn tác!</b>
            </p>

            <table class="table table-bordered">
                <tr>
                    <th style="width: 30%;">Họ tên</th>
                    <td>@Html.DisplayFor(model => model.HoTen)</td>
                </tr>
                <tr>
                    <th>Số điện thoại</th>
                    <td>@Html.DisplayFor(model => model.Sdt)</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <th>Địa chỉ</th>
                    <td>@Html.DisplayFor(model => model.DiaChi)</td>
                </tr>
            </table>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="MaKh" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Xóa
                </button>
                <a class="btn btn-secondary px-4 ms-2" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

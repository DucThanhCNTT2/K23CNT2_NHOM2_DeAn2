@model Hethonglaptop_prj2.Models.KhachHang
@{
    Layout = null;
    ViewData["Title"] = "Chi tiết khách hàng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">

    <div class="card shadow-lg border-0" style="width: 500px;">
        <div class="card-header bg-info text-white text-center">
            <h3 class="mb-0"><i class="bi bi-person-vcard"></i> Thông tin chi tiết khách hàng</h3>
        </div>

        <div class="card-body p-4">
            <table class="table table-borderless">
                <tr>
                    <th style="width:30%;" class="text-secondary">Mã khách hàng</th>
                    <td>@Html.DisplayFor(model => model.MaKh)</td>
                </tr>
                <tr>
                    <th class="text-secondary">Họ tên</th>
                    <td class="fw-bold">@Html.DisplayFor(model => model.HoTen)</td>
                </tr>
                <tr>
                    <th class="text-secondary">Số điện thoại</th>
                    <td>@Html.DisplayFor(model => model.Sdt)</td>
                </tr>
                <tr>
                    <th class="text-secondary">Email</th>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <th class="text-secondary">Địa chỉ</th>
                    <td>@Html.DisplayFor(model => model.DiaChi)</td>
                </tr>
            </table>

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.MaKh" class="btn btn-warning px-4">
                    <i class="bi bi-pencil-square"></i> Sửa
                </a>
                <a class="btn btn-secondary px-4 ms-2" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

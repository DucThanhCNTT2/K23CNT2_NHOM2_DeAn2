@model Hethonglaptop_prj2.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-info text-white text-center">
            <h3 class="mb-0">Thông tin chi tiết sản phẩm</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Hiển thị ảnh sản phẩm -->
                <div class="col-md-4 text-center">
                    <img src="~/@Model.Anh" alt="@Model.TenSp" class="img-fluid rounded shadow-sm mb-3" style="max-height:250px;" />
                </div>

                <!-- Hiển thị thông tin -->
                <div class="col-md-8">
                    <table class="table table-borderless">
                        <tr>
                            <th class="text-secondary" style="width:30%;">Tên sản phẩm</th>
                            <td>@Html.DisplayFor(model => model.TenSp)</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Giá</th>
                            <td class="fw-bold text-danger">@String.Format("{0:N0} VNĐ", Model.Gia)</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Số lượng</th>
                            <td>@Html.DisplayFor(model => model.SoLuong)</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Mô tả</th>
                            <td>@Html.DisplayFor(model => model.MoTa)</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Thương hiệu</th>
                            <td>@Html.DisplayFor(model => model.MaThNavigation.TenTh)</td>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.MaSp" class="btn btn-warning px-4">
                    <i class="bi bi-pencil-square"></i> Sửa
                </a>
                <a class="btn btn-secondary px-4 ms-2" asp-area="" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>

@model Hethonglaptop_prj2.Models.SanPham

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark text-center">
            <h3 class="mb-0">Chỉnh sửa thông tin sản phẩm</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="MaSp" />

                <div class="mb-3">
                    <label asp-for="TenSp" class="form-label fw-bold"></label>
                    <input asp-for="TenSp" class="form-control" placeholder="Nhập tên sản phẩm" />
                    <span asp-validation-for="TenSp" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Gia" class="form-label fw-bold"></label>
                        <input asp-for="Gia" class="form-control" placeholder="Nhập giá (VNĐ)" />
                        <span asp-validation-for="Gia" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="SoLuong" class="form-label fw-bold"></label>
                        <input asp-for="SoLuong" class="form-control" placeholder="Nhập số lượng" />
                        <span asp-validation-for="SoLuong" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="MoTa" class="form-label fw-bold"></label>
                    <textarea asp-for="MoTa" class="form-control" rows="3" placeholder="Nhập mô tả sản phẩm"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MaTh" class="form-label fw-bold"></label>
                    <select asp-for="MaTh" class="form-select" asp-items="ViewBag.MaTh"></select>
                    <span asp-validation-for="MaTh" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Anh" class="form-label fw-bold"></label>
                    <input asp-for="Anh" class="form-control" placeholder="Nhập tên file ảnh (vd: laptop1.jpg)" />
                    <span asp-validation-for="Anh" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                    <a class="btn btn-secondary px-4 ms-2" asp-area="" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model Hethonglaptop_prj2.Models.SanPham

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">Xác nhận xóa sản phẩm</h3>
        </div>
        <div class="card-body">
            <p class="text-center text-muted mb-4">Bạn có chắc chắn muốn xóa sản phẩm này?</p>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Tên sản phẩm</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TenSp)</dd>

                <dt class="col-sm-3 fw-bold">Giá</dt>
                <dd class="col-sm-9">@String.Format("{0:N0} VNĐ", Model.Gia)</dd>

                <dt class="col-sm-3 fw-bold">Số lượng</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SoLuong)</dd>

                <dt class="col-sm-3 fw-bold">Mô tả</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MoTa)</dd>

                <dt class="col-sm-3 fw-bold">Ảnh</dt>
                <dd class="col-sm-9">
                    <img src="~/@Model.Anh" alt="@Model.TenSp" class="img-thumbnail" style="max-height:120px;" />
                </dd>

                <dt class="col-sm-3 fw-bold">Thương hiệu</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MaThNavigation.TenTh)</dd>
            </dl>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="MaSp" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Xóa
                </button>
                <a class="btn btn-secondary px-4 ms-2" asp-area="" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>

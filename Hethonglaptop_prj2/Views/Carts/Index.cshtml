@model List<Hethonglaptop_prj2.Models.SanPham>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-body">
            <h3 class="mb-4 fw-bold">🛒 Giỏ hàng</h3>

            @if (!Model.Any())
            {
                <p>Giỏ hàng trống!</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Quay lại Trang chủ</a>
            }
            else
            {
                <table class="table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Tổng</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sp in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="/images/@sp.Anh" alt="@sp.TenSp" width="70" class="me-3 rounded" />
                                        <span>@sp.TenSp</span>
                                    </div>
                                </td>
                                <td>@sp.Gia.ToString("N0") đ</td>
                                <td>
                                    <input type="number" value="@sp.SoLuong" min="1" class="form-control text-center" style="width:80px;" />
                                </td>
                                <td>@(sp.Gia * sp.SoLuong).ToString("N0") đ</td>
                                <td>
                                    <a asp-action="RemoveFromCart" asp-route-id="@sp.MaSp"
                                       class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-warning fw-bold">
                        ← Quay lại Trang chủ
                    </a>
                    <h4 class="fw-bold">
                        Tổng cộng:
                        <span class="text-danger">
                            @foreach (var sp in Model)
                            {
                                <div>
                                    Tên: @sp.TenSp <br />
                                    Giá: @sp.Gia.ToString("N0") đ
                                </div>
                            }
                        </span>
                    </h4>
                    <a asp-controller="Order" asp-action="Checkout" class="btn btn-success fw-bold">
                        Thanh toán
                    </a>
                </div>
            }
        </div>
    </div>
</div>

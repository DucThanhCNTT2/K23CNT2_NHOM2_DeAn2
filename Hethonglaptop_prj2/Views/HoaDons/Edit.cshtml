@model Hethonglaptop_prj2.Models.HoaDon

@{
    ViewData["Title"] = "Chỉnh sửa hóa đơn";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark text-center">
            <h3 class="mb-0">Chỉnh sửa thông tin hóa đơn</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="MaHd" />

                <div class="mb-3">
                    <label asp-for="NgayLap" class="form-label fw-bold"></label>
                    <input asp-for="NgayLap" type="date" class="form-control" />
                    <span asp-validation-for="NgayLap" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaKh" class="form-label fw-bold">Khách hàng</label>
                        <select asp-for="MaKh" class="form-select" asp-items="ViewBag.MaKh"></select>
                        <span asp-validation-for="MaKh" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaNv" class="form-label fw-bold">Nhân viên</label>
                        <select asp-for="MaNv" class="form-select" asp-items="ViewBag.MaNv"></select>
                        <span asp-validation-for="MaNv" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="TongTien" class="form-label fw-bold"></label>
                    <input asp-for="TongTien" type="number" class="form-control" placeholder="Nhập tổng tiền (VNĐ)" />
                    <span asp-validation-for="TongTien" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                    <a class="btn btn-secondary px-4 ms-2" asp-area="" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

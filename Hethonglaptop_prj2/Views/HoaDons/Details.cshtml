@model Hethonglaptop_prj2.Models.HoaDon

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-info text-white text-center">
            <h3 class="mb-0">Thông tin chi tiết hóa đơn</h3>
        </div>
        <div class="card-body">
            <table class="table table-borderless">
                <tr>
                    <th class="text-secondary" style="width:25%;">Ngày lập</th>
                    <td>@Html.DisplayFor(model => model.NgayLap)</td>
                </tr>
                <tr>
                    <th class="text-secondary">Tổng tiền</th>
                    <td class="fw-bold text-danger">
                        @String.Format("{0:N0} VNĐ", Model.TongTien)
                    </td>
                </tr>
                <tr>
                    <th class="text-secondary">Khách hàng</th>
                    <td>
                        @Html.DisplayFor(model => model.MaKhNavigation.HoTen)
                        (@Html.DisplayFor(model => model.MaKhNavigation.MaKh))
                    </td>
                </tr>
                <tr>
                    <th class="text-secondary">Nhân viên lập</th>
                    <td>
                        @Html.DisplayFor(model => model.MaNvNavigation.HoTen)
                        (@Html.DisplayFor(model => model.MaNvNavigation.MaNv))
                    </td>
                </tr>
            </table>

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.MaHd" class="btn btn-warning px-4">
                    <i class="bi bi-pencil-square"></i> Sửa
                </a>
                <a class="btn btn-secondary px-4 ms-2" asp-area="" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>

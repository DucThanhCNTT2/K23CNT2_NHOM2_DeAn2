@model Hethonglaptop_prj2.Models.HoaDon

@{
    ViewData["Title"] = "Xóa hóa đơn";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">Xác nhận xóa hóa đơn</h3>
        </div>
        <div class="card-body">
            <p class="text-center text-muted mb-4">
                Bạn có chắc chắn muốn xóa hóa đơn này không?
            </p>

            <table class="table table-bordered">
                <tr>
                    <th style="width:25%;">Ngày lập</th>
                    <td>@Html.DisplayFor(model => model.NgayLap)</td>
                </tr>
                <tr>
                    <th>Tổng tiền</th>
                    <td class="fw-bold text-danger">@String.Format("{0:N0} VNĐ", Model.TongTien)</td>
                </tr>
                <tr>
                    <th>Khách hàng</th>
                    <td>
                        @Html.DisplayFor(model => model.MaKhNavigation.HoTen)
                        (@Html.DisplayFor(model => model.MaKhNavigation.MaKh))
                    </td>
                </tr>
                <tr>
                    <th>Nhân viên lập</th>
                    <td>
                        @Html.DisplayFor(model => model.MaNvNavigation.HoTen)
                        (@Html.DisplayFor(model => model.MaNvNavigation.MaNv))
                    </td>
                </tr>
            </table>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="MaHd" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Xóa
                </button>
                <a class="btn btn-secondary px-4 ms-2" asp-area="" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>

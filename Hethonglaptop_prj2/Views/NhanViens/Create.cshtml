@model Hethonglaptop_prj2.Models.NhanVien

@{
    ViewData["Title"] = "Thêm mới nhân viên";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white text-center">
            <h3 class="mb-0">Thêm nhân viên mới</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="MaNv" class="form-label fw-bold"></label>
                    <input asp-for="MaNv" class="form-control" placeholder="Nhập mã nhân viên" />
                    <span asp-validation-for="MaNv" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="HoTen" class="form-label fw-bold"></label>
                    <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên nhân viên" />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ChucVu" class="form-label fw-bold"></label>
                    <input asp-for="ChucVu" class="form-control" placeholder="Nhập chức vụ" />
                    <span asp-validation-for="ChucVu" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Sdt" class="form-label fw-bold"></label>
                        <input asp-for="Sdt" class="form-control" placeholder="Nhập số điện thoại" />
                        <span asp-validation-for="Sdt" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-plus-circle"></i> Thêm mới
                    </button>
                    <a class="btn btn-secondary px-4 ms-2" asp-area="" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

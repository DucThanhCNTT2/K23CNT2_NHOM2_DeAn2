@model Hethonglaptop_prj2.Models.KhachHang

@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-info text-white text-center">
            <h3 class="mb-0">Thông tin chi tiết khách hàng</h3>
        </div>
        <div class="card-body">
            <table class="table table-borderless">
                <tr>
                    <th style="width:25%;" class="text-secondary">Họ tên</th>
                    <td class="fw-bold">@Html.DisplayFor(model => model.HoTen)</td>
                </tr>
                <tr>
                    <th class="text-secondary">Số điện thoại</th>
                    <td>@Html.DisplayFor(model => model.Sdt)</td>
                </tr>
                <tr>
                    <th class="text-secondary">Email</th>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <th class="text-secondary">Địa chỉ</th>
                    <td>@Html.DisplayFor(model => model.DiaChi)</td>
                </tr>
            </table>

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.MaKh" class="btn btn-warning px-4">
                    <i class="bi bi-pencil-square"></i> Sửa
                </a>
                <a class="btn btn-secondary px-4 ms-2" asp-area="" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>

@model Hethonglaptop_prj2.Models.KhachHang

@{
    ViewData["Title"] = "Xóa khách hàng";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">Xác nhận xóa khách hàng</h3>
        </div>
        <div class="card-body">
            <p class="text-center text-muted mb-4">
                Bạn có chắc chắn muốn xóa khách hàng này không?
            </p>

            <table class="table table-bordered">
                <tr>
                    <th style="width:25%;">Họ tên</th>
                    <td>@Html.DisplayFor(model => model.HoTen)</td>
                </tr>
                <tr>
                    <th>Số điện thoại</th>
                    <td>@Html.DisplayFor(model => model.Sdt)</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <th>Địa chỉ</th>
                    <td>@Html.DisplayFor(model => model.DiaChi)</td>
                </tr>
            </table>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="MaKh" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Xóa
                </button>
                <a class="btn btn-secondary px-4 ms-2" asp-area="" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>
